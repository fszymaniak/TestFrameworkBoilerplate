<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2012/06/nuspec.xsd">
  <metadata>
    <id>TestFrameworkBoilerplate.Template</id>
    <version>1.0.0</version>
    <title>Test Framework Boilerplate Template</title>
    <description>
      A comprehensive .NET test framework template with SpecFlow BDD, WireMock HTTP mocking,
      Autofac dependency injection, and RestSharp for API testing. Supports Integration,
      Contract, UI, and Performance testing scenarios. Get started quickly with pre-configured
      project structure, drivers pattern, and example scenarios.
    </description>
    <summary>Kickstart your test automation with a production-ready test framework template featuring SpecFlow, WireMock, and best practices.</summary>
    <authors>Filip Szymaniak</authors>
    <owners>Filip Szymaniak</owners>
    <packageTypes>
      <packageType name="Template" />
    </packageTypes>
    <tags>dotnet-new;templates;test;testing;specflow;wiremock;integration-test;bdd;gherkin;api-testing;restsharp;autofac;nunit;test-automation</tags>
    <license type="expression">MIT</license>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <projectUrl>https://github.com/fszymaniak/TestFrameworkBoilerplate</projectUrl>
    <repository type="git" url="https://github.com/fszymaniak/TestFrameworkBoilerplate" />
    <readme>README.md</readme>
    <releaseNotes>
      v1.0.0 - Initial release
      - Integration test project template with SpecFlow and WireMock
      - Driver pattern implementation for RestSharp
      - Autofac dependency injection setup
      - Example HTTP scenarios (GET, POST, PUT)
      - Configurable via dotnet CLI parameters
      - Support for .NET 8.0 and .NET 9.0
      - GitHub Actions workflow included
    </releaseNotes>
  </metadata>
  <files>
    <!-- README.md must be in package root for NuGet readme feature -->
    <file src="README.md" target="" />
    <!-- Include all other files in content folder for template -->
    <file src="**\*" target="content"
          exclude="**\bin\**;**\obj\**;**\.vs\**;**\.git\**;**\.idea\**;**\*.user;**\*.suo;**\TestResults\**;**/node_modules/**;README.md" />
  </files>
</package>
